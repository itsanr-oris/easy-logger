{
    "name": "f-oris/easy-logger",
    "description": "an easy monolog manager",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "F.oris",
            "email": "us@f-oris.me"
        }
    ],
    "require" : {
        "php": ">=5.5",
        "ext-json": "*",
        "monolog/monolog": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "mockery/mockery": "^0.9|^1.0"
    },
    "autoload": {
        "psr-4": {
            "Foris\\Easy\\Logger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Foris\\Easy\\Logger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
